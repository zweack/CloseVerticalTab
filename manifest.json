{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Close Vertical Tab",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": { "48": "img/ct-48.png",
             "128": "img/ct-128.png" },
  "description": "A stationary button that closes the current tab. Clean up tabs with less effort.",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Close the current tab",
    "default_icon": "img/ct-icon-x-19.png"
  },
  "web_accessible_resources": [
      "img/*",
      "css/*",
	    "js/*"
  ],
  "permissions": [
    "tabs", "storage"
  ],
  "background": { "scripts": ["js/background.js"] }
}
